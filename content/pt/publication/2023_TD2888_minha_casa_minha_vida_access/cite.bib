  title = {{Programa Minha Casa Minha Vida : avalia\c{c}\~oes de ader\^encia ao d\'eficit habitacional e de acesso a oportunidades urbanas}},
  author = {Krause, Cleandro and Nadalin, Vanessa Gapriotti and Pereira, Rafael H. M. and Sim{\~o}es, Pedro Reis},
  year = {2023},
